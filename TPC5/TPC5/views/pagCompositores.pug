extends layout

block content
    .w3-card-4
        header.w3-container.w3-pink
            h1= titulo  
                a.w3-btn.w3-round.w3-grey( href="/compositores/registo") +       
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Nome
                    th Periodo
                    th Actions
                
                each com in lista
                    tr
                        td= com.id
                        td 
                            a(href= "/compositores/" + com.id) #{com.nome}
                        td= com.periodo 
                        td  
                            a.w3-button.w3-blue(href= "/compositores/edit/" + com.id) Editar 
                            a.w3-button.w3-blue(href= "/compositores/delete/" + com.id) Eliminar
        footer.w3-container.w3-pink
            adress Generated by EngWeb2024 TPC5 in #{data}
