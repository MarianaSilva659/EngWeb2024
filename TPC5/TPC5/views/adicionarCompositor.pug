extends layout

block content
  .w3-card-4
    header.w3-container.w3-purple
      h2 Compositor
    
    form.w3-container(method="POST")
      fieldset
        legend Metadata
        label(for="id") Id
        input.w3-input.w3-round(type="text", name="id", value="")
        label(for="nome") Nome
        input.w3-input.w3-round(type="text", name="nome", value="")
        label(for="bio") Bibliografia
        input.w3-input.w3-round(type="text", name="bio", value="")
        label(for="dataNasc") Data de nascimento
        input.w3-input.w3-round(type="text", name="dataNasc", value="")
        label(for="dataObito") Data de Óbito
        input.w3-input.w3-round(type="text", name="dataObito", value="")
        label(for="periodo") Período
        input.w3-input.w3-round(type="text", name="periodo", value="")
      
      button.w3-btn.w3-purple.w3-mb-2(type="submit") Adicionar Compositor
    
    footer.w3-container.w3-purple
      h5 Generated by TPC5 in #{data} - #[a(href="/compositores") Voltar]
