extends layout

block content
    .w3-card-4
      header.w3-container.w3-purple
        h2 Compositor
      
      form.w3-container(method="POST")
        fieldset
          legend Metadata
          label(for="id") Id
          input.w3-input.w3-round(type="text", name="id", readonly, value=compositor.id)
          label(for="nome") Nome
          input.w3-input.w3-round(type="text", name="nome", value=compositor.nome)
          label(for="bio") Bibliografia
          input.w3-input.w3-round(type="text", name="bio", value=compositor.bio)
          label(for="dataNasc") Data de nascimento
          input.w3-input.w3-round(type="text", name="dataNasc", value=compositor.dataNasc)
          label(for="dataObito") Data de Óbito
          input.w3-input.w3-round(type="text", name="dataObito", value=compositor.dataObito)
          label(for="periodo") Período
          input.w3-input.w3-round(type="text", name="periodo", value=compositor.periodo)
        
        button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
      
      footer.w3-container.w3-purple
        h5 Generated by TPC5 in #{data} - #[a(href="/compositores") Voltar]